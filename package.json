{
  "name": "@janiscommerce/api-test",
  "version": "1.2.0",
  "description": "A package for testing APIs developed with @janiscommerce/api",
  "main": "index.js",
  "scripts": {
    "test": "export TEST_ENV=true; mocha --exit -R nyan --recursive tests/",
    "test-ci": "nyc --reporter=html --reporter=text mocha --recursive tests/",
    "watch-test": "export TEST_ENV=true; mocha --exit -R nyan -w --recursive tests/",
    "coverage": "nyc npm test",
    "lint": "eslint index.js lib/ tests/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/janis-commerce/api-test.git"
  },
  "author": "Janis",
  "license": "ISC",
  "homepage": "https://github.com/janis-commerce/api-test.git#readme",
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "husky": "^2.4.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0"
  },
  "files": [
    "lib/"
  ],
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "@janiscommerce/api": "^3.1.1",
    "sinon": "^7.3.2"
  }
}
